{
    "compilerOptions": {
        "lib": [ "ESNext", "dom" ],
        "target": "ES5",
        "module": "commonjs", 
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": false, 
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports" :true,
        "noEmitOnError": true,
        "removeComments": true,
        "noImplicitAny": true,        
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "builds"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [ "**/*.ts" ]
}